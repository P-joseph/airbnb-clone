container_commands:
  01_sh_executable:
    command: find .platform/hooks/ -type f -iname "*.sh" -exec chmod +x {} \;
  02_seed_amenities:
    command: "source /var/app/venv/*/bin/activate && python manage.py seed_amenities"
    leader_only: true
  03_seed_facilities:
    command: "source /var/app/venv/*/bin/activate && python manage.py seed_facilities"
    leader_only: true
  04_seed_users:
    command: "source /var/app/venv/*/bin/activate && python manage.py seed_users --number 20"
    leader_only: true
  05_seed_rooms:
    command: "source /var/app/venv/*/bin/activate && python manage.py seed_rooms --number 30"
    leader_only: true
option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: config.wsgi:application
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: config.settings